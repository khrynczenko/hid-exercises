    IPTypes
    LookupIP
    ParseIP
  hs-source-dirs:
    .
  build-depends:       base >=4.13 && <4.14, exceptions, text
  default-language:    Haskell2010

executable iplookup
  main-is:             Main.hs
  -- other-extensions:
