    exceptions, text
  hs-source-dirs: .
  default-language:    Haskell2010
    --optparse-applicative, hspec, hedgehog, doctest, tasty

test-suite iplookup-test
  type: exitcode-stdio-1.0
  main-is: Test.hs
  other-modules: ParseIPSpec
  hs-source-dirs: .
  build-depends:
    base, iplookup-lib, hspec, hedgehog, doctest, tasty, tasty-hspec,
    exceptions, text
  default-language:    Haskell2010
